@import 'lib/nib'

global-reset()

hgreen = #177cda
lgreen = #1b92ff
header_height = 84px
tree_height = 480px


@font-face {
  font-family 'Museo'
  src: url('museo/Museo500-Regular-webfont.ttf') format('truetype')
  font-weight: normal;
  font-style: normal;
}

@font-face
  font-family 'Museo'
  src url('museo/Museo300-Regular-webfont.ttf') format('truetype')
  font-weight 300
  font-style normal

@font-face
  font-family 'Museo'
  src url('museo/Museo700-Regular-webfont.ttf') format('truetype')
  font-weight bold
  font-style normal

.hidden
  display none

body
  font-family 'Museo'

a
  position relative
  text-decoration none
  color inherit

  &:active
    top 1px

#map_canvas
  position absolute
  top 0
  left 0
  width: 100%
  height: 100%
  z-index 1


#documents
  border 1px solid #b6b99b
  border-bottom none
  overflow hidden
  margin 48px 0

  
#file_list
  margin-top 100px
  background none
  width 974px
  left 50%
  margin-left -480px
  overflow-y scroll
  overflow-x hide
  li_width = 480px - 24px - 1px
  max-height 436px
  position absolute
  z-index 2

  & .thumb
    max-height 50px
    width auto
    float left
    margin-right 16px

  & .profilePic
    float right
    margin-top -54px

  & li
    padding 16px 12px
    width li_width - 1px
    float left
    border-bottom 1px solid #b6b99b
    border-right 1px solid #b6b99b
    background linear-gradient(top, #fff, lighten(#b6b99b, 75%))
    opacity 0.75

    &:hover
      opacity 1

    &:nth-child(even)
      border-right none
      width li_width

    & h3, & p
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      
    & h3
      font-weight bold
      font-size 20px
      max-width 360px
      line-height 1.5
      margin-bottom 8px
      color hgreen

      & a
        color inherit
        &:hover
          color darken(hgreen, 25%)

    & .round
      float left
      border-radius 8px
      width 32px
      height 32px

    & .is-uploading
      width 0px
      height 74px
      display block
      overflow hidden
      background linear-gradient(top, lgreen, hgreen)
      padding 16px 12px
      margin -16px -12px
      color #fff
      text-shadow 0px 1px 0px #000

      & h3
        color #fff


#searchField
  text-align:center;
  position:absolute;
  top:50;
  right:0;
  z-index:3;
  padding: 12px;
  width:454px;
  float:left;
  border-bottom:1px solid #b6b99b;
  border-right:1px solid #b6b99b;
  background:linear-gradient(top, #fff 0%, #edeee6 100%);
  opacity:.65;

  &:hover
    opacity:1;
